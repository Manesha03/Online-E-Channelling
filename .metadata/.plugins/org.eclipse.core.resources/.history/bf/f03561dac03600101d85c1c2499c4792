  <script>
    function validateCardholderName() {
      const name = document.getElementById("cardName").value.trim();
      const nameError = document.getElementById("nameError");
      const regex = /^[A-Za-z\s]{2,}$/;
      if (!regex.test(name)) {
        nameError.textContent = "Invalid name. Only letters and spaces allowed (min 2 characters).";
        nameError.style.display = "block";
        return false;
      }
      nameError.style.display = "none";
      return true;
    }

    function validateCardNumber() {
      const number = document.getElementById("cardNumber").value.replace(/\s+/g, "");
      const numberError = document.getElementById("numberError");
      const regex = /^\d{16}$/;
      if (!regex.test(number)) {
        numberError.textContent = "Invalid card number. Please enter a valid 16-digit card number.";
        numberError.style.display = "block";
        return false;
      }
      numberError.style.display = "none";
      return true;
    }

    function validateExpiry() {
      const expiry = document.getElementById("expiry").value.trim();
      const expiryError = document.getElementById("expiryError");
      const regex = /^(0[1-9]|1[0-2])\/\d{2}$/;

      if (!regex.test(expiry)) {
        expiryError.textContent = "Invalid expiry. Format must be MM/YY.";
        expiryError.style.display = "block";
        return false;
      }

      const [month, year] = expiry.split("/").map(Number);
      const now = new Date();
      const currentMonth = now.getMonth() + 1;
      const currentYear = now.getFullYear() % 100;

      if (year < currentYear || (year === currentYear && month < currentMonth)) {
        expiryError.textContent = "Card expired. Please use a valid expiry date.";
        expiryError.style.display = "block";
        return false;
      }

      expiryError.style.display = "none";
      return true;
    }

    function validateCVV() {
      const cvv = document.getElementById("cvv").value.trim();
      const cvvError = document.getElementById("cvvError");
      const regex = /^\d{3,4}$/;

      if (!regex.test(cvv)) {
        cvvError.textContent = "Invalid CVV. It must be 3 or 4 digits.";
        cvvError.style.display = "block";
        return false;
      }
      cvvError.style.display = "none";
      return true;
    }

    function validateForm() {
      const validName = validateCardholderName();
      const validNumber = validateCardNumber();
      const validExpiry = validateExpiry();
      const validCVV = validateCVV();
      return validName && validNumber && validExpiry && validCVV;
    }
  </script>
